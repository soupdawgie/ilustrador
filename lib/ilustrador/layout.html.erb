<doctype HTML>
<html>
  <meta charset='utf-8'>
  <head>
  </head>
  <style>
    @font-face {
      font-family: 'PT Sans';
      src: asset-url('/assets/PT-Sans.ttf') format('truetype');
    }
    @font-face {
      font-family: 'Bitter';
      src: asset-url('/assets/Bitter-Bold.otf') format('opentype');
    }
    html {
      color: #FFF;
    }
    /*.background {
      width: 1100px;
      height: 550px;
      padding: 70px 40px 30px 40px;
      background: #F4EED8;
    }*/
    .card {
      position: absolute;
      top: 0;
      left: 0;
      display: block;
      width: 450px;
      height: 237px;
      background-size: 100%;
      background: -webkit-linear-gradient(top, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.3) 100%),
        url('<%= image %>');
      /*box-shadow:  0px 10px 26px 0px rgba(0,0,0,0.17);*/
    }
    .section {
      margin: 15px 0px 15px 15px;
      display: inline-block;
      font-family: 'PT Sans';
      font-size: 14px;
      border: 1px solid #FFF;
      padding: 0 3px;
      height: 17px;
      line-height: 16px;
      border-radius: 2px;

    }
    .title {
      width: 300px;
      margin-left: 15px;
      text-align: left;
      font-family: 'Bitter';
      /*font-weight: bold;*/
      font-size: 24px;
    }
    .logo {
      display: inline-block;
      clear: both;
      margin: 90px 0px 0px 360px;
    }
  </style>
  <body>
    <div class='background'>
      <div class='card'>
        <div class='section'>
          <%= section %>
        </div>
        <div class='title'>
          <%= title %>
        </div>
        <div class='logo'>
          <img src='/assets/logo.png'>
        </div>
      </div>
    </div>
  </body>
</html>
